   Name = "Breach 096",
   Callback = function()
        pcall(function()
        plr.Character.HumanoidRootPart.CFrame = CFrame.new(708.509, 40.35, -159.07)
        wait(12)
        plr.Character.HumanoidRootPart.CFrame = CFrame.new(-171.968, 40.35, 503.986)
